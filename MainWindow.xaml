<Window x:Class="MessageCoder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MessageCoder"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Border BorderThickness="1" BorderBrush="Black">
            <TextBox x:Name="MessageBox" Text="Enter Message Here"  HorizontalAlignment="Left" Margin="63.2,76.2,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="91" Width="299" RenderTransformOrigin="0.512,0.524" />
        </Border>
        <TextBox HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="##" VerticalAlignment="Top" Width="120" Margin="188,190,0,0"/>
        <Label Content="Enter Code Number:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="63,186,0,0" Width="120"/>
        <Button Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="63,235,0,0"/>
        <TextBox HorizontalAlignment="Left" Height="98" TextWrapping="Wrap" Text="Result" VerticalAlignment="Top" Width="289" Margin="432,77,0,0"/>
        <Label Content="Encrypted Message:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="432,28,0,0" Width="116"/>
    </Grid>
</Window>
